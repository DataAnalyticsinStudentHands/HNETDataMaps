{
  "name": "hnet_data_maps",
  "version": "0.9.0",
  "description": "DASH HNET DataMaps - a real time analysis & visualization frame work for sensor data",
  "main": "main.html",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "chokidar": "^1.7.0",
    "fibers": "^1.0.15",
    "fs-extra": "^0.30.0",
    "ftps": "https://registry.npmjs.org/ftps/-/ftps-0.4.6.tgz",
    "highcharts": "^4.2.7",
    "meteor-node-stubs": "^0.3.2"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "pretest": "npm run lint --silent"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DataAnalyticsinStudentHands/DataMaps.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DataAnalyticsinStudentHands/DataMaps/issues"
  },
  "homepage": "https://github.com/DataAnalyticsinStudentHands/DataMaps",
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^11.1.0",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-meteor": "^4.0.0",
    "eslint-plugin-react": "^6.2.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jquery": true,
      "node": true,
      "meteor": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "globals": {
      "Meteor": false,
      "Session": false,
      "sAlert": true,
      "moment": false,
      "Papa": true,
      "Package": true,
      "Cordova": true,
      "Npm": true
    },
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "no-underscore-dangle": "off",
      "max-len": [
        2,
        160,
        2,
        {
          "ignoreUrls": true,
          "ignoreComments": false,
          "ignoreTemplateLiterals": true
        }
      ],
      "arrow-body-style": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "no-mixed-operators": [
        "error",
        {
          "allowSamePrecedence": true
        }
      ],
      "no-plusplus": [
        2,
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "meteor/no-session": [
        0
      ]
    },
    "settings": {
      "import/resolver": "meteor"
    }
  }
}
